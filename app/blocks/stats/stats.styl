.stats
	min-height 393px
	background-color #00c6d7
	&__in
		@extends .in
		padding-top 100px
		padding-bottom 100px
		color #fff
		+r($m)
			padding-bottom 70px
	&__list
		text-align center
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items flex-start
	&__item
		width 285px
		+r($tL)
			margin-bottom 70px
			width 50%
		+r($m)
			margin-bottom 50px
			width 100%
	&__val
		margin-bottom 0
		min-height 78px
		display block
		font-size 64px
		font-family $mB
		line-height 1
	&__text
		font-size 24px
		font-family $mR
		line-height 1

