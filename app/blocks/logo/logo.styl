.logo
	width 410px
	display flex
	flex-flow row
	justify-content flex-start
	align-items flex-start
	color #fff
	text-decoration none
	text-align left
	+r($t)
		width 160px
	+r($m)
		width 160px
	&_sec
		+r($tL)
			width 410px
	&__brand
		margin-top 3px
		width 160px
		height 23px
		fill #fff
		+r($tL)
			margin-top 0
		+r($m)
			margin-top 0
			width 100%
			// height 23px
	&__slogan
		position relative
		margin-top -3px
		margin-left 32px
		padding-top 2px
		padding-left 31px
		width 302px
		line-height 1
		color #bbbbbb
		+r($tL)
			display none
		+r($m)
			display none
		&:after
			position absolute
			top -4px
			left 0
			content ''
			width 1px
			height 40px
			background #bbbbbb
