.how
	display block
	background-color #000000
	&__in
		@extends .in
		padding-top 100px
		padding-bottom 30px
		text-align center
	&__title
		@extends .title
		color #FFF
		margin-bottom 50px
	&__text
		margin auto
		margin-bottom 50px
		max-width 554px
		color #FFF
		font-size 16px
		line-height 1.625
		text-align center
	&__list
		display flex
		flex-flow row wrap
		justify-content center
		align-items flex-start

	&__item
		margin-bottom 50px
		width 290px
		text-align center
		+r($tL)
			width 33.3%
		+r($m)
			width 100%
	&__image
		position relative
		z-index 2
		margin auto
		margin-bottom 36px
		width 164px
		height 164px
		// background #FFF
		border-radius 50%
		img
			position absolute
			top 50%
			left 50%
			z-index 1
			display block
			max-width 100%
			height auto
			transform translate(-50%,-50%)
		&:after
			position absolute
			z-index -2
			left 0
			bottom -18px
			content ""
			width 100px
			height 100px
			background-color #00c6d7
			border-radius 50%
	&__num
		position absolute
		z-index 1
		top -16px
		right 0
		padding-top 12px
		padding-right 18px
		padding-bottom 18px
		padding-left 18px
		width 60px
		height 60px
		color #FFF
		font-size 20px
		font-family $mB
		text-align center
		border 4px solid #00c6d7
		background-color #000000
		border-radius 50%
	&__item-title
		color #fff
		font-size 20px
		font-family $mB
		line-height 1.5
