.header
	position fixed
	z-index 3
	top 0
	left 0
	width 100%
	min-height 119px
	background rgba(0,0,0, .7)
	+r($m)
		min-height 270px
	&__in
		@extends .in
		padding-top 35px
		padding-bottom 35px
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items center
		+r($m)
			padding-top 50px
	&__contacts
		margin-left auto
		min-width 460px
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items center
		+r($m)
			margin-right auto
			min-width auto
	&__phone
		margin-right 30px
		+r($m)
			margin-top 50px
			margin-right 0
			display inline-block
	&__button
		display inline-block
		vertical-align top
		+r($m)
			position absolute
			top auto
			bottom 50px
			left 50%
			padding-left 20px
			padding-right 20px
			min-width 186px
			transform translateX(-50%)
	&__logo
		+r($m)
			position absolute
			top 28px
			left 50%
			transform translateX(-50%)

.phone
	position relative
	padding-left 28px
	font-family $mR
	font-size 24px
	color #FFF
	line-height 1
	text-decoration none
	&:after
		position absolute
		top 0
		left 0
		content ''
		width 18px
		height 18px
		background url('../images/general/phone.svg') 0 0 / cover no-repeat



