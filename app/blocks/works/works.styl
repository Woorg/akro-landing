.works
	// padding-bottom 100px
	display block
	overflow hidden
	+r($tL)
		padding-bottom 0
	&__in
		@extends .in
		padding-top 80px
		+r($m)
			padding-top (80px/2)
	&__title
		@extends .title
		margin-bottom 50px
		color #FFF
		text-align center
		+r($tL)
			padding-left 33px
			padding-right 33px
		+r($m)
			padding-left 0
			padding-right 0

	&__item
		position relative
		width 100%
		min-height 460px
		+r($tL)
			width 100%
		+r($m)
			width 100%
		// &:after
		// 	position absolute
		// 	top 0
		// 	left 0
		// 	width 100%
		// 	height 100%
		// 	content ''
		// 	background rgba(0,0,0, .7)
		&:hover
			.works__item-w
				visibility visible
				opacity 1
				tr(opacity .3s ease)

	&__item-w
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		padding-top 50px
		padding-bottom 50px
		visibility hidden
		opacity 1
		height 100%
		color #fff
		background rgba(0,0,0, .7)
		text-decoration none
		text-align center
		tr(opacity .3s ease)
		+r($m)
			visibility visible
			opacity 1

	&__item-title
		margin-bottom 10px
		color #fff
		font-size 36px
		font-family $mB
		// letter-spacing 2px
		// text-transform uppercase
	&__item-text
		font-size 16px
		line-height 1.3
	&__item-button
		position absolute
		bottom 50px
		left 50%
		transform translateX(-50%)
	&__button
		position relative
		display block
		min-height 156px
		background url('../images/general/all-works.jpg') 50% 0 no-repeat
		background-size cover
		text-decoration none
		&:after
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			content ''
			background #00c6d7
			opacity .7
	&__button-text
		position absolute
		top 50%
		left 50%
		z-index 1
		@extends .in
		color #fff
		font-family $mB
		font-size 36px
		line-height 1.555
		transform translate(-50%, -50%)
		+r($tL)
			white-space nowrap
		+r($m)
			max-width 100px
			font-size 24px
			padding-left 50px
			padding-right 50px
			white-space normal
			line-height 1
			text-align center

