.get
	display block
	background #FFF
	&__in
		@extends .in
		padding-top 80px
		padding-bottom 70px
		color #000
	&__title
		@extends .title
		margin-bottom 50px
		text-align center
		+r($tL)
			margin auto
			margin-bottom 50px
			max-width 400px
			line-height 1
		+r($m)
			padding-left 50px
			padding-right 50px
	&__list
		margin auto
		max-width 750px
		+r($tL)
			max-width 100%

	&__item
		position relative
		margin-bottom 30px
		padding-left 195px
		min-height 165px
		+r($m)
			margin-bottom 50px
			padding-left 0
	&__image
		position absolute
		top 0
		left 0
		+r($m)
			position relative
			margin auto
			margin-bottom 20px
			max-width 165px
		&:after
			position absolute
			z-index 1
			top -10px
			left -10px
			width 160px
			height 160px
			content ''
			background transparent
			border 3px solid #00c6d7

	&__item-title
		margin-bottom 14px
		font-size 20px
		font-family $mB
	&__text
		font-size 16px
		font-family $mR


