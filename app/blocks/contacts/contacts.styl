.contacts
	position relative
	z-index 0
	display flex
	flex-flow row wrap
	justify-content center
	align-items flex-start
	background #00c6d7
	&__map,
	&__content
		position relative
		width 50%
		min-height 480px
		+r($tL)
			width 100%
	&__content
		+r($tL)
			order -1
			min-height 403px
	&__map
		background #333
	&__content-w
		position absolute
		top 50%
		padding-left 50px
		font-size 24px
		color #fff
		transform translateY(-50%)
		+r($tL)
			padding-left 15px
	&__title
		margin-bottom 15px
		font-family $mB

	&__text
		margin-bottom 15px
		a
			color inherit
			text-decoration none

